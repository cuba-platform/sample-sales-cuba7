<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.sales.web.customer">
    <data>
        <instance id="customerDc"
                  class="com.company.sales.entity.Customer"
                  view="_local">
            <loader id="customerLoader"/>
        </instance>
        <collection id="ordersDc"
                    class="com.company.sales.entity.Order"
                    view="_local">
            <loader id="ordersLoader">
                <query>
                    <![CDATA[select o from sales$Order o where o.customer.id = :customerId order by o.date]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <form id="form"
              dataContainer="customerDc">
            <column width="250px">
                <textField id="nameField"
                           property="name"/>
                <textField id="emailField"
                           property="email"/>
            </column>
        </form>
        <label value="Orders"/>
        <table id="ordersTable"
               dataContainer="ordersDc"
               height="100px"
               width="300px">
            <columns>
                <column id="date"/>
                <column id="amount"/>
            </columns>
        </table>
        <hbox id="windowActions"
              spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
